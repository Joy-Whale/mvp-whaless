    <style name="Joy.Widget">
    </style>
    
    <style name="Joy.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/draw_selector_background_light_default</item>
    </style>
    
    <style name="Joy.Widget.Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:textAppearance">@style/Joy.TextAppearance.Middle.White</item>
        <item name="android:background">@drawable/draw_selector_background_light_default</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Joy.Widget.Button.Rectangle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:background">@drawable/draw_selector_background_light_rectangle</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Joy.Widget.Dialog"/>
    
    <style name="Joy.Widget.Dialog.Transparent">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    
    <style name="Joy.Widget.Dialog.Message" parent="Base.Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorTextGrey</item>
        <!-- 宽度适配 -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>
    
    <style name="Joy.Widget.Input"/>
    
    <style name="Joy.Widget.Input.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:textAppearance">@style/Joy.TextAppearance.Middle</item>
        <item name="android:textColorHint">#afb3bb</item>
        <item name="android:background">@drawable/draw_shape_round_rectangle_solid_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_15</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Joy.Widget.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
        <item name="android:background">@color/colorLineGrey</item>
    </style>
    
    <style name="Joy.Widget.Line.Vertical">
        <item name="android:layout_width">@dimen/size_1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Joy.Widget.Material"/>
    
    <!--<style name="Joy.Widget.Material.Dialog" parent="Material.App.Dialog.Simple.Light">-->
    <!--<item name="android:layout_width">match_parent</item>-->
    <!--</style>-->
    
    <style name="Joy.Widget.Text"/>
    
    <style name="Joy.Widget.Text.Single">
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Joy.Widget.Text.Double">
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Joy.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="actionBarSize">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_45</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/Joy.TextAppearance.Middle.White</item>
        <item name="titleMargins">0dp</item>
        <item name="maxButtonHeight">?attr/actionBarSize</item>
        <item name="actionOverflowButtonStyle">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="contentInsetStart">@dimen/size_10</item>
        <item name="contentInsetStartWithNavigation">?attr/actionBarSize</item>
        <!--<item name="navigationIcon">@drawable/draw_vector_navigate_arrow</item>-->
    </style>
    
    <style name="Joy.Widget.Toolbar.Default"/>
    
    <style name="Joy.Widget.Toolbar.NoNavigate">
        <item name="navigationIcon">@null</item>
    </style>
    
    <style name="Joy.Widget.Toolbar.Button"/>
    
    <style name="Joy.Widget.Toolbar.Button.Navigate" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- navigation icon width -->
        <item name="android:minWidth">@dimen/size_36</item>
        <item name="android:scaleType">centerInside</item>
        <!--<item name="android:paddingRight">@dimen/size_20</item>-->
    </style>
    
    <style name="Joy.Widget.Toolbar.OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>
    
