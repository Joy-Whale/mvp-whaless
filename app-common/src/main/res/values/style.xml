    <style name="Joy.Widget.Layout"/>
    
    <!-- 灰色背景条目 -->
    <style name="Joy.Widget.Layout.ItemDecoration"/>
    
    <style name="Joy.Widget.Layout.ItemDecoration.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_item_decoration</item>
        <item name="android:background">@drawable/draw_shape_item_decoration</item>
    </style>
    
    <style name="Joy.Widget.Layout.ItemDetail" parent="@style/Joy.Widget.Button.Rectangle">
        <item name="android:paddingLeft">@dimen/size_15</item>
        <item name="android:paddingRight">@dimen/size_15</item>
        <item name="android:layout_height">@dimen/size_50</item>
    </style>
    
    <style name="Joy.Widget.Layout.ItemDetail.Name" parent="@style/Joy.Widget.Text.Double">
        <item name="android:textAppearance">@style/Joy.TextAppearance.Middle.Primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxWidth">@dimen/size_75</item>
    </style>
    
    <style name="Joy.Widget.Layout.ItemDetail.Text" parent="@style/Joy.Widget.Text.Single">
        <item name="android:textAppearance">@style/Joy.TextAppearance.Middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_75</item>
        <item name="android:layout_marginRight">@dimen/size_45</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Joy.Widget.Layout.ItemDetail.Input" parent="@style/Joy.Widget.Input.Default">
        <item name="android:textAppearance">@style/Joy.TextAppearance.Middle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_45</item>
        <item name="android:layout_marginLeft">@dimen/size_75</item>
        <item name="android:layout_marginRight">@dimen/size_45</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

