    <style name="Joy.Widget.Main"/>
    
    <style name="Joy.Widget.Main.Tab"/>
    
    <style name="Joy.Widget.Main.Tab.Layout" parent="Joy.Widget.Button.Default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="Joy.Widget.Main.Tab.Icon">
        <item name="android:layout_width">@dimen/size_20</item>
        <item name="android:layout_height">@dimen/size_20</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/size_1</item>
    </style>
    
    <style name="Joy.Widget.Main.Tab.Text">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">@dimen/size_5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Joy.TextAppearance.Small2</item>
        <item name="android:textColor">@color/colorTextGreyLight</item>
    </style>
